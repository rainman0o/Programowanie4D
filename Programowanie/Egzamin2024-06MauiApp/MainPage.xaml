<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Egzamin2024_06MauiApp.MainPage"
             x:Name="thisPage"
             xmlns:converter ="clr-namespace:Egzamin2024_06MauiApp.Converters"
             xmlns:local ="clr-namespace:Egzamin2024_06MauiApp">
    <ContentPage.BindingContext>
        <local:MainViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <converter:CubesImages x:Key="CubesImage"/>
        <converter:ConvertAmmountFromStringToInt x:Key="ConvertAmmountFromStringToInt"/>
    </ContentPage.Resources>
    
    <ScrollView>
        
        <StackLayout Orientation="Vertical"
                     BackgroundColor="Beige">

            <Entry Placeholder="wprowadz liczbę kości"
                   BackgroundColor="LightSalmon" 
                   Text="{Binding AmmountOfCubes, Converter= {x:StaticResource ConvertAmmountFromStringToInt}}"/>


            <Button Command ="{Binding Set_NewCubesAmmount}"
                    Text="ZMIEŃ ILOŚĆ KOŚCI"
                    BackgroundColor="Chocolate"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Margin="0,9,0,9"/>

            <Label Text="Gra w kosci. Autor 12345678901"
                   BackgroundColor="Brown"
                   TextColor="White"
                   FontSize="Large"
                   Margin="0,9,0,9"
                   />
            <Button Text="RZUĆ KOŚĆMI"
                    BackgroundColor="Chocolate"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Margin="0,9,0,9"
                    Command="{Binding Throw_Cubes}"
                    />

            <HorizontalStackLayout
                BackgroundColor="White">
                <CollectionView ItemsSource="{Binding Cubes}"
                                ItemsLayout="HorizontalList">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                            <Image Source="{Binding Converter = {x:StaticResource CubesImage}}"
                                   HeightRequest="100"
                                   Margin="10,5,10,30"/>
                                <Label Text="{Binding}"
                                       HorizontalOptions="Center"
                                       FontSize="Medium"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </HorizontalStackLayout>
            <Label Text="{Binding ResoultOfThisDraw, StringFormat='Wynik tego losowania: {0}'}"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   Margin="0,9,0,9"/>
            
            <Label Text="{Binding TotalPoints, StringFormat='Wynik gry: {0}'}"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   Margin="0,9,0,9"/>
            
            <Button Text="RESETUJ WYNIK"
                    BackgroundColor="Chocolate"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Margin="0,9,0,9"
                    Command="{Binding Reset_Points}" />
        </StackLayout>
    </ScrollView>

</ContentPage>
